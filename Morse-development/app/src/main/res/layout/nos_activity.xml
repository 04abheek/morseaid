                android:layout_weight="1"
                android:padding="8dp"
                android:text="AIDS HELPLINE"
                android:background="@drawable/white_outline"
                android:textColor="#fff"
                android:textSize="24sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="1097"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/children_helpline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="CHILDREN HELPLINE"
                android:background="@drawable/white_outline"
                android:textColor="#fff"
                android:textSize="18.4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="1098"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>
            <Button
